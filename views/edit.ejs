<% include partials/header.ejs %>

<div class="container mt-3">
    <div class="row">
        <div style="width: 30%; margin: 25px auto">
        <form method="POST" action="/index/<%=fashions._id %>?_method=PUT"> 
            <div class="form-group">
                <label for="inputPostName">Post Name:</label>
                <input type="text" class="form-control" id="inputPostName" placeholder="Enter email" name="post[name]" value="<%=fashions.name%>">
            </div>
            <div class="form-group">
                <label for="inputImageUrl">Image Url:</label>
                <input type="text" class="form-control" id="inputImageUrl" placeholder="www.images.com" name="post[image]" value="<%=fashions.image%>">
            </div>
            <div class="form-group">
                <label for="inputDescription">Description:</label>
                <input class="form-control" type="text" id="inputDescription" placeholder="Some random texts...." name="post[description]" value="<%=fashions.description%>">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit</button>
            </div>
        </form>
    </div>
    </div>
</div>

